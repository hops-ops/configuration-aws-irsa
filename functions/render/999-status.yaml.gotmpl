{{- $xr := getCompositeResource . }}
{{- $s := $state.status }}
---
apiVersion: {{ $xr.apiVersion }}
kind: {{ $xr.kind }}
status:
  ready: {{ $s.ready }}
  role:
    arn: {{ $s.role.arn | default "" | quote }}
    name: {{ $s.role.name | default "" | quote }}
  policy:
    arn: {{ $s.policy.arn | default "" | quote }}
    name: {{ $s.policy.name | default "" | quote }}
  attachment:
    id: {{ $s.attachment.id | default "" | quote }}
