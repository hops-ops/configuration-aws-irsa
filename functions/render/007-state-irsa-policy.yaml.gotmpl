{{- $eff := $state.spec.effective }}

{{- /* Policy always renders */ -}}
{{- $render := true }}

{{- /* Set irsa.policy slice */ -}}
{{- $policy := dict
  "render" $render
  "name" $eff.policy.name
  "document" $eff.policy.document
  "externalName" $eff.policy.externalName
  "ready" $state.observed.policy.ready
}}
{{- $state = set $state "irsa" (merge $state.irsa (dict "policy" $policy)) }}
